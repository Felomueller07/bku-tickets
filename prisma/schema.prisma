generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Seat {
  id        Int      @id @default(autoincrement())
  row       String
  number    Int
  status    String   // "available" | "reserved" | "paid"
  firstName String?
  lastName  String?
  note      String?
  userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([row, number])
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     String // "admin" | "user"
}

model FreeTicket {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  used      Boolean  @default(false)
  usedBy    Int?
  usedAt    DateTime?
  createdAt DateTime @default(now())
}
